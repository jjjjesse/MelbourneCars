<div class="row">
  <% @cars.each do |car| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag car.image.url(:large) %>
        <div class="caption">
          <h2><%= car.make_model %> <%= car.year %></h2>
          <h4><%= car.kms %>kms</h4>
          <p><%= car.description %></p>
          <h3>$<%= car.price %></h3>

          <% if user_signed_in? %>
            <p><%= link_to 'Edit', edit_car_path(car), class: "btn btn-primary" %>
            <%= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning"  %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>


